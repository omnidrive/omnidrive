<?import javafx.scene.layout.*?>

<VBox maxHeight="450.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #ECECEC;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="omnidrive.ui.accounts.AccountsController">
